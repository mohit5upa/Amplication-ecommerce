datasource postgres {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  apiToken        String?
  createdAt       DateTime        @default(now())
  customerGroupId Int?
  dob             DateTime?
  email           String          @unique
  firstName       String?
  gender          EnumUserGender?
  id              String          @id @default(cuid())
  image           String?
  isSuspended     Boolean?
  isVerified      Boolean?
  lastName        String?
  mobileNumber    String?
  password        String
  rememberToken   String?
  roles           Json
  status          Boolean
  token           String?
  updatedAt       DateTime        @updatedAt
  username        String          @unique
}

enum EnumUserGender {
  Male
  Female
  Other
}

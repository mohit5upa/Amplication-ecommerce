datasource postgres {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  apiToken        String?
  createdAt       DateTime         @default(now())
  customerGroupId Int?
  dob             DateTime?
  email           String           @unique
  firstName       String?
  gender          EnumUserGender[]
  id              String           @id @default(cuid())
  image           String?
  isSuspended     Boolean?
  isVerified      Boolean?
  lastName        String?
  mobileNumber    String
  password        String
  rememberToken   String?
  roles           Json
  status          Boolean?
  token           String?
  updatedAt       DateTime         @updatedAt
  username        String           @unique
}

model Role {
  createdAt       DateTime @default(now())
  id              String   @id @default(cuid())
  roleDescription String
  roleName        String
  updatedAt       DateTime @updatedAt
}

model UserRole {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  roleId    Int
  updatedAt DateTime @updatedAt
  userId    Int
}

model ProductCategory {
  categoryId Int?
  createdAt  DateTime @default(now())
  id         String   @id @default(cuid())
  productId  Int?
  updatedAt  DateTime @updatedAt
}

model CustomerGroup {
  code          String?
  createdAt     DateTime @default(now())
  id            String   @id @default(cuid())
  isUserDefined Int
  name          String?
  updatedAt     DateTime @updatedAt
}

model Category {
  categoryIconPath String?
  createdAt        DateTime @default(now())
  displayMode      String
  id               String   @id @default(cuid())
  image            String
  lft              Int
  parentId         Int?
  position         Int
  rgt              Int?
  status           Int
  updatedAt        DateTime @updatedAt
}

model Product {
  attributeFamilyId Int
  createdAt         DateTime @default(now())
  id                String   @id @default(cuid())
  parentId          Int
  sku               String   @unique
  types             String
  updatedAt         DateTime @updatedAt
}

enum EnumUserGender {
  Male
  Female
  Other
}

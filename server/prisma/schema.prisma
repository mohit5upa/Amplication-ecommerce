datasource postgres {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  apiToken        String?
  createdAt       DateTime         @default(now())
  customerGroupId Int?
  dob             DateTime?
  email           String           @unique
  firstName       String?
  gender          EnumUserGender[]
  id              String           @id @default(cuid())
  image           String?
  isSuspended     Boolean?
  isVerified      Boolean?
  lastName        String?
  mobileNumber    String
  password        String
  rememberToken   String?
  roles           Json
  status          Boolean?
  token           String?
  updatedAt       DateTime         @updatedAt
  username        String           @unique
  userRoles       UserRole[]
}

model UserRole {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  roleId    Role[]
  updatedAt DateTime @updatedAt
  userId    User     @relation(fields: [userIdId], references: [id])
  userIdId  String
}

model Role {
  createdAt       DateTime  @default(now())
  id              String    @id @default(cuid())
  roleDescription String
  roleName        String
  updatedAt       DateTime  @updatedAt
  userRole        UserRole? @relation(fields: [userRoleId], references: [id])
  userRoleId      String?
}

enum EnumUserGender {
  Male
  Female
  Other
}
